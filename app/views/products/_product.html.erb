<%= link_to product do %>
  <div id="<%= dom_id product %>" class="relative">
    <% if product.on_sale? %>
      <div class="absolute top-2 right-2 bg-red-500 text-white px-2 py-1 rounded-md text-xs font-bold z-10">
        SALE
      </div>
    <% end %>
    
    <%= image_tag product.images.first, class: "w-full h-80 object-cover rounded-lg hover:brightness-75 transition-all duration-250" if product.images.any? %>
    
    <!-- Product Name with Bold and Italic Text -->
    <p class="text-lg text-black font-bold italic mt-2"><%= product.name %></p>
    
    <!-- Product Price with Bold and Italic Text -->
    <div class="flex items-center gap-2">
      <% if product.on_sale? %>
        <p class="text-lg text-black font-bold italic line-through opacity-75">
          <%= number_to_currency product.price %>
        </p>
        <p class="text-lg text-red-500 font-bold italic">
          <%= number_to_currency product.current_price %>
        </p>
        <% if product.discount_percentage.present? %>
          <span class="text-xs bg-red-100 text-red-800 px-1.5 py-0.5 rounded">
            <%= product.discount_percentage %>% OFF
          </span>
        <% end %>
      <% else %>
        <p class="text-lg text-black font-bold italic">
          <%= number_to_currency product.price %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>