<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "The Best Products" %>

  <!-- Filter Dropdown -->
<div class="mb-4 flex justify-end">
  <%= form_with url: products_path, method: :get, class: 'flex items-center' do |f| %>
    <%= f.select :filter, options_for_select([['On Sale', 'on_sale'], ['New Products', 'new_products'], ['Recently Updated', 'recently_updated']]), { include_blank: 'Select Filter' }, { class: 'p-2 border rounded-md' } %>
    <%= f.submit 'Apply Filter', class: 'ml-2 p-2 bg-blue-500 text-white rounded-md' %>
  <% end %>
</div>

  <!-- Centering the Heading -->
  <div class="flex justify-center items-center mb-6">
    <h1 class="font-bold text-4xl text-center font-brokenbrush">The Best Products</h1>
  </div>

  <!-- Centering the Product Grid and making it responsive -->
  <div id="products" class="min-w-full grid grid-cols-1 md:grid-cols-4 gap-8 justify-items-center">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>

  <%= paginate @products %>


  <% if current_admin %>
  <div class="mt-4 w-full flex justify-center items-center">
    <%= link_to "Create New Product", new_product_path, class: "rounded-lg py-3 px-5 bg-blue-500 text-white text-2xl font-semibold inline-block" %>
  </div>
<% end %>

</div>
