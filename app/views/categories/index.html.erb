<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Categories" %>

  <h1 class="font-bold text-4xl text-center font-brokenbrush">All Brands</h1>
 
  <div id="categories" class="min-w-full grid grid-cols-1 md:grid-cols-4 gap-8 justify-items-center">
    <% @categories.each do |category| %>
      <%= render category %>
    <% end %>
  </div>
</div>
