<div class="bg-white p-6 rounded-lg shadow-md max-w-3xl mx-auto mt-8">
  <!-- Business Overview Section -->
  <h1 class="text-3xl font-bold text-center mb-6"><%= @page.title %></h1>
  
  <p class="text-lg text-gray-700 mb-4">
    <%= @page.content.html_safe %>
  </p>

  <!-- Admin Edit Link -->
  <% if current_admin %>
  <div class="w-full flex justify-center items-center mt-16 gap-4">
    <%= link_to "Edit this page", edit_admin_page_path(@page), class: "rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
  </div>
  <% end %>
</div>
