<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <!-- Profile Heading -->
  <h1 class="text-2xl font-semibold text-gray-800 mb-4">Welcome, <%= @user.name || @user.email %></h1>

  <h2 class="text-xl font-medium text-gray-700 mb-6">Your Profile</h2>

  <p class="text-gray-600 mb-2"><strong>Email:</strong> <%= @user.email %></p>
  <p class="text-gray-600 mb-4"><strong>Address:</strong> <%= @user.address %>, <%= @user.city %>, <%= @user.state %> <%= @user.zip_code %></p>

  <!-- Past Orders Section -->
  <h3 class="text-xl font-medium text-gray-700 mb-4">Your Past Orders</h3>

  <% if @orders.any? %>
    <div class="overflow-x-auto shadow-lg rounded-lg">
      <table class="min-w-full table-auto border-collapse">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Order ID</th>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Total</th>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Tax</th>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Status</th>
            <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-4 py-2 text-sm text-gray-700"><%= order.id %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= number_to_currency(order.grand_total) %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= number_to_currency(order.tax_total) %></td>
              <td class="px-4 py-2 text-sm text-gray-700"><%= order.status.capitalize %></td>
              <td class="px-4 py-2 text-sm text-gray-700">
                <%= link_to "View", order_path(order), class: "text-blue-500 hover:text-blue-700" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-500 mt-4">You have no past orders.</p>
  <% end %>
</div>
